<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <h4 class="mb-2">尋找餐廳：</h4>
        <form action="/search">
          <div class="d-flex flex-column flex-sm-row align-items-sm-center gap-2">
            <div class="input-group  mb-2 mb-sm-0 mr-sm-2">
              <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="{{keyword}}"
                aria-describedby="search-button">
              <div class="input-group-append ">
                <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
              </div>
            </div>
            <div class="col-auto">
              <form action="/">
                <select class="form-select" name="sortValue" id="sortValue" onchange="form.submit()">
                  <option value="1">A > Z</option>
                  <option value="2">Z > A</option>
                  <option value="3">類別</option>
                  <option value="4">地區</option>
                </select>
              </form>
            </div>
          </div>
        </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    {{#each restaurants}}
    <div class="col-md-4 col-12 col-sm-6">
      <div class="card-columns">
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}"
              alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge rounded-pill bg-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
             <div class="card-footer d-flex justify-content-end flex-wrap">
              <a href="/restaurants/{{this._id}}/edit"><button class="btn btn-link btn-sm">Edit</button></a>
              <a href="/restaurants/{{this._id}}"><button class="btn btn-link btn-sm">Details</button></a>
              <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-danger btn-sm text-white">delete</button>
              </form>
             </div>
          </div>
        </a>
      </div>
    </div>
    {{/each}}
  </div>
</div>